<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="70dp"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/rl_vehicle"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="车型(平台定义)"
            android:textColor="@color/color3"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/tv_vehicle_brand_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="车辆品牌型号 车牌号"
            android:textColor="@color/color6"
            android:textSize="14sp" />


        <!--<com.flyco.roundview.RoundTextView-->
            <!--android:id="@+id/tv_auth_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="10dp"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/add_new_vehicle_info"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="18sp"-->
            <!--app:rv_cornerRadius="5dp"-->
            <!--app:rv_backgroundColor="@color/color_blue"-->
            <!--app:rv_backgroundPressColor="@color/color_blue_pressed"-->
            <!--/>-->

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_auth_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="认证中"
            android:textColor="@color/color_blue"
            android:textSize="13sp"
            app:rv_cornerRadius="10dp"
            app:rv_strokeColor="@color/color_blue"
            app:rv_strokeWidth="@dimen/line_height"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="@dimen/line_height"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_below="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="删除"
        android:clickable="true"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:textColor="@color/color6"
        />
        <TextView
            android:id="@+id/tv_edit"
            android:layout_below="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="编辑"
            android:layout_toLeftOf="@+id/tv_delete"
            android:clickable="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/color6"
            />
    </RelativeLayout>
</LinearLayout>