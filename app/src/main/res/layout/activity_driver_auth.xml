<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yun.yunmaster.base.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.yun.yunmaster.base.NavigationBar>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:rv_backgroundColor="@color/color_blue"
        app:rv_backgroundPressColor="@color/color_blue_pressed"
        app:rv_cornerRadius="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigationBar"
        android:layout_above="@id/tv_submit"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证照片（正/反面）"
                android:textColor="@color/color2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <com.yun.yunmaster.view.GridSquareCell
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/idCardFrontImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_list_tianjia_nor"/>
                </com.yun.yunmaster.view.GridSquareCell>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <com.yun.yunmaster.view.GridSquareCell
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/idCardBackImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_list_tianjia_nor"/>
                </com.yun.yunmaster.view.GridSquareCell>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="姓名:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="身份证号:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/idNoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="出生日期:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/birthdayTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="地址:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="有效期至:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/validateDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾驶证照片"
                android:textColor="@color/color2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <com.yun.yunmaster.view.GridSquareCell
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/licenseImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_list_tianjia_nor"/>
                </com.yun.yunmaster.view.GridSquareCell>
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <com.yun.yunmaster.view.GridSquareCell
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </com.yun.yunmaster.view.GridSquareCell>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="驾驶证号:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/licenseNoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="姓名:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/licenseNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="性别:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/licenseSexTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="地址:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/licenseAddressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="出生年月:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/licenseBirthdayTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="初始领证日期:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/firstGetDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="准驾车型:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/driveVehicleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="有效起始日期:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/startDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color6"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="有效截止日期:"/>
                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/endDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color3"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

