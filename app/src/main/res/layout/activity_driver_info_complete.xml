<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.yun.yunmaster.base.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.yun.yunmaster.base.NavigationBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigationBar"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_personal_info_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/personal_info"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color2"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_below="@+id/tv_personal_info_title"
                android:layout_marginLeft="12dp"
                android:background="@color/color_e6" />
            <TextView
                android:id="@+id/tv_truename_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line1"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="真实姓名"
                />


            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_truename"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_truename_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:lines="1"
                android:maxLength="10"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />


            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_below="@+id/et_truename"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@color/color_e6"
                android:layout_height="1dp"/>



            <TextView
                android:id="@+id/tv_id_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line2"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="身份证号码"
                />


            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_id_no"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_id_no_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请输入身份证号码"
                android:lines="1"
                android:digits="1234567890X"
                android:maxLength="18"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />


            <View
                android:id="@+id/view_line3"
                android:layout_width="match_parent"
                android:layout_below="@+id/et_id_no"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@color/color_e6"
                android:layout_height="1dp"/>


            <TextView
                android:id="@+id/tv_bankcard_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line3"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="银行卡号"
                />




            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_bankcard_num"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_bankcard_num_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:lines="1"
                android:inputType="number"
                android:maxLength="26"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />
            <View
                android:id="@+id/view_line4"
                android:layout_width="match_parent"
                android:layout_below="@+id/et_bankcard_num"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@color/color_e6"
                android:layout_height="1dp"/>



            <TextView
                android:id="@+id/tv_bank_deposit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line4"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="@string/bank_address"
                />




            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_bank_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_bank_deposit_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请填写开户行，例如：中国建设银行建国路支行"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />



            <View
                android:id="@+id/view_line5"
                android:layout_width="match_parent"
                android:layout_below="@+id/et_bank_address"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@color/color_e6"
                android:layout_height="1dp"/>



            <TextView
                android:id="@+id/tv_driving_license_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/view_line5"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="@string/upload_driving_license_photo"
                />

              <TextView
                  android:id="@+id/tv_upload_driving_license"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_below="@+id/view_line5"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="37dp"
                  android:text="点击上传"
                  android:gravity="center_vertical"
                  android:layout_marginTop="25dp"
                  android:textSize="13sp"
                  android:drawableLeft="@drawable/icon_list_tianjia_nor"
                  android:textColor="@color/color_blue"
                  android:drawablePadding="5dp"
                  android:clickable="true"
                  />



            <ImageView
                android:id="@+id/iv_driving_license"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tv_driving_license_title"
                android:layout_marginLeft="37dp"
                android:scaleType="fitXY"
                android:layout_marginRight="37dp"
                android:src="@drawable/icon_list_jiashizheng_nor"
                />

            <View
                android:id="@+id/view_line6"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/iv_driving_license"
                android:background="@color/bg_color"
                />


            <TextView
                android:id="@+id/tv_vehicle_info_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/view_line6"
                android:text="@string/vehicle_info"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color2"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_line7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_below="@+id/tv_vehicle_info_title"
                android:layout_marginLeft="12dp"
                android:background="@color/color_e6" />
            <TextView
                android:id="@+id/tv_vehicle_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line7"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="@string/vehicle_type"
                />


            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_vehicle_type"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_vehicle_type_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请输入车辆品牌"
                android:maxLines="2"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />


            <RelativeLayout
                android:id="@+id/rl_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/tv_vehicle_type_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/shape_car_type_bg">

                <TextView
                    android:id="@+id/tv_vehicle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="请输入车辆品牌"
                    android:textColor="@color/color9"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_list_down" />
            </RelativeLayout>

            <!--<View-->
                <!--android:id="@+id/view_line9"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_below="@+id/rl_vehicle_type"-->
                <!--android:layout_marginLeft="37dp"-->
                <!--android:layout_marginRight="37dp"-->
                <!--android:background="@color/color_e6"-->
                <!--android:layout_height="1dp"/>-->


            <TextView
                android:id="@+id/tv_vehicle_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_vehicle_type"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="@string/vehicle_no"
                />


            <com.yun.yunmaster.view.ClearEditText
                android:id="@+id/et_vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_vehicle_no_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@null"
                android:hint="请输入车辆号码"
                android:lines="1"
                android:maxLength="7"
                android:textColor="@color/color2"
                android:textColorHint="@color/color9"
                android:textSize="13sp" />

            <View
                android:id="@+id/view_line10"
                android:layout_width="match_parent"
                android:layout_below="@+id/et_vehicle_no"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="@color/color_e6"
                android:layout_height="1dp"/>



            <TextView
                android:id="@+id/tv_vehicle_license_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/view_line10"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/color2"
                android:textSize="18sp"
                android:text="@string/vehicle_license_photo"
                />

            <TextView
                android:id="@+id/tv_upload_vehicle_license"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/view_line10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37dp"
                android:text="点击上传"
                android:gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:drawableLeft="@drawable/icon_list_tianjia_nor"
                android:textColor="@color/color_blue"
                android:drawablePadding="5dp"
                android:clickable="true"
                />



            <ImageView
                android:id="@+id/iv_vehicle_license"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tv_vehicle_license_title"
                android:scaleType="fitXY"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:src="@drawable/icon_list_xingshizheng_nor"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/iv_vehicle_license"
                android:layout_marginTop="25dp"
                android:background="@color/bg_color"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/submit"
                    android:textColor="@color/common_blue_bg_textcolor"
                    android:background="@drawable/selector_login_submit"
                    />

            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

